@page
@model WebApp.Pages.UsersModel
@{
}
<script src="~/js/pages/users.js"></script>

<h1>Users List</h1>

<div class="    bs-docs-section">
        <form class="row-cols-2">
        <div class="form-group mx-sm-3 mb-2">
            <div>
                <div>
                    <input id="txtSearchId" type="number" class="form-control" placeholder="Buscar por ID" />
                </div>
                <div>
                    <button id="btnSearchById" class="source-button btn btn-primary btn-xs" type="button">Buscar</button>
                </div>
            </div>
                <div>
                    <input id="txtSearchUserCode" type="text" class="form-control" placeholder="Buscar por UserCode" />
                </div>
                <div>
                    <button id="btnSearchByUserCode" class="source-button btn btn-primary btn-xs" type="button">Buscar</button>
                </div>
                <div>
                <div>
                    <input id="txtSearchEmail" type="text" class="form-control" placeholder="Buscar por Email" />
                </div>
                <div>
                    <button id="btnSearchByEmail" class="source-button btn btn-primary btn-xs" type="button">Buscar</button>
                </div>
                </div>
            </div>
            
        </form>
        
        
        <div class="col-lg-12">
        <legend>Users List</legend>

            <table id="tblUser" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th>Id </th>
                        <th>User Code</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Birth Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
            </table>

        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="ns-component">
                <form>
                    <fieldset>
                        <legend>User form</legend>
                        <div class="form-group">
                            <label for="txtId" class="form-label mt-$">User ID</label>
                            <input id="txtId" readonly type="number" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label for="txtUserCode" class="form-label mt-$">User Code</label>
                            <input id="txtUserCode"  type="text" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label for="txtName" class="form-label mt-$">Name</label>
                            <input id="txtName"  type="text" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label for="txtEmail" class="form-label mt-$">Email</label>
                            <input id="txtEmail"  type="email" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label for="txtBDate" class="form-label mt-$">Birth date</label>
                            <input id="txtBDate"  type="date" class="form-control" />
                        </div>

                        <div class="form-group">
                            <select for="txtStatus" class="form-select mt-3" id="txtStatus">
                                <option>AC</option>
                                <option>IN</option>  
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="txtPassword" class="form-label mt-$">Password</label>
                            <input id="txtPassword" type="password" class="form-control" />
                        </div>

                    </fieldset>
                </form>
                <br />
                <button id="btnCreate" class="source-button btn btn-primary btn-xs" type="button">Save</button>
                <button id="btnUpdate" class="source-button btn btn-info btn-xs" type="button">Update</button>
                <button id="btnDelete" class="source-button btn btn-danger btn-xs" type="button">Delete</button>
            </div>
        </div>

    </div>
    </div>
    

</div>